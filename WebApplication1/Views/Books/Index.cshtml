@model IEnumerable<WebApplication1.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Erscheinungsdatum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SeitenAnzahl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sprache)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Verlag)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Erscheinungsdatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeitenAnzahl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sprache)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verlag.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
